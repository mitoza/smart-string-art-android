<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/m16"
    android:paddingEnd="@dimen/m16">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ven_title"
        style="@style/TextView.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title of the text:" />

    <View
        android:id="@+id/ven_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/m16"
        android:layout_marginEnd="@dimen/m16"
        android:background="?attr/textColor2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ven_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ven_title"
        app:layout_constraintTop_toTopOf="@+id/ven_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ven_value"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m4"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ven_title"
        app:layout_constraintWidth_percent="0.3"
        tools:text="10" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/ven_seek_bar"
        style="@style/SeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="3"
        app:layout_constraintBottom_toBottomOf="@+id/ven_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ven_value"
        app:layout_constraintTop_toTopOf="@+id/ven_value" />


</androidx.constraintlayout.widget.ConstraintLayout>