<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    tools:context="com.flycatcher.smartstring.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_title"
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m4"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/m4"
        android:background="?attr/bgColor2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title" />

    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="@dimen/m64"
        android:layout_height="@dimen/m64"
        android:visibility="gone"
        tools:visibility="visible"
        android:indeterminateTint="@color/yellow"
        app:layout_constraintTop_toTopOf="@+id/main_preview"
        app:layout_constraintBottom_toBottomOf="@+id/main_preview"
        app:layout_constraintStart_toStartOf="@+id/main_preview"
        app:layout_constraintEnd_toEndOf="@+id/main_preview"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_progress_value"
        style="@style/TextView.Title"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="99%"
        app:layout_constraintTop_toTopOf="@+id/main_progress"
        app:layout_constraintBottom_toBottomOf="@+id/main_progress"
        app:layout_constraintStart_toStartOf="@+id/main_progress"
        app:layout_constraintEnd_toEndOf="@+id/main_progress"
        />

    <include
        layout="@layout/layout_controls_generator"
        android:id="@+id/c_gen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/c_image"
        app:layout_constraintTop_toBottomOf="@+id/main_preview" />

    <include
        layout="@layout/layout_controls_image"
        android:id="@+id/c_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/m8"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>